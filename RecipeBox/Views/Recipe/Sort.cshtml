@using RecipeBox.Models;
@using System.Collections.Generic;

@{
  Layout = "_Layout";
}

<div class="container">
    <h3>Top Rated Recipes:</h3>
    <ul>
    @foreach (Recipe recipe in @Model)
    {
        <li style = "color: green; font-size: 20px;"><a style = "color: green;" href="/recipe/@recipe.GetId()/details">@recipe.GetName()  || Rating: @recipe.GetRating()</a></li>
    }
    </ul>
</div>