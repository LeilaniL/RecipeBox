@{
  Layout = "_Layout";
}

<div class="container">
<h3>Add a New category</h3>
<form action = "/addCategory" method = "post">
    <label for = "categoryName">category</label>
    <input type = "text" name = "categoryName"><br>
    
    <button type = "submit">Add category</button>

</form><br>
<ul>
 @foreach (var category in @Model)
{
    <li><h3><a href="/category/@category.GetId()/recipes">@category.GetName()</a></h3><span style = 'font-size: 10px;'>
      <a href = '/category/@category.GetId()/delete'>
        Delete Category</a></span></li>
}
</ul>

</div>